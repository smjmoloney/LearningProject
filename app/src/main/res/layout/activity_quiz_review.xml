<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FlashCardCreateActivity">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar_main" />

    <TextView
        android:id="@+id/textViewQuestion"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_above="@+id/buttonOptionOne"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginBottom="16dp"
        android:background="@color/blue_light"
        android:gravity="center_horizontal|center"
        android:padding="10dp"
        android:textColor="@color/blue_off_black"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/buttonOptionOne"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar" />

    <Button
        android:id="@+id/buttonOptionOne"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/buttonOptionTwo"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="16dp"
        android:background="@color/blue_off_black"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:textColor="@color/blue_off_white"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@+id/buttonOptionTwo"
        app:layout_constraintEnd_toEndOf="@+id/textViewQuestion"
        app:layout_constraintStart_toStartOf="@+id/textViewQuestion" />

    <Button
        android:id="@+id/buttonOptionTwo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/buttonOptionFour"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="16dp"
        android:background="@color/blue_off_black"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:textColor="@color/blue_off_white"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@+id/buttonOptionThree"
        app:layout_constraintEnd_toEndOf="@+id/buttonOptionOne"
        app:layout_constraintStart_toStartOf="@+id/buttonOptionOne" />

    <Button
        android:id="@+id/buttonOptionThree"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/buttonOptionFour"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"
        android:background="@color/blue_off_black"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:textColor="@color/blue_off_white"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@+id/buttonOptionFour"
        app:layout_constraintEnd_toEndOf="@+id/buttonOptionTwo"
        app:layout_constraintStart_toStartOf="@+id/buttonOptionTwo" />

    <Button
        android:id="@+id/buttonOptionFour"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="16dp"
        android:background="@color/blue_off_black"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:textColor="@color/blue_off_white"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/buttonOptionThree"
        app:layout_constraintStart_toStartOf="@+id/buttonOptionThree" />

</androidx.constraintlayout.widget.ConstraintLayout>