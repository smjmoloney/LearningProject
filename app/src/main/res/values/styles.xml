<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/blue_dark</item>
        <item name="colorPrimaryDark">@color/blue_off_black</item>
        <item name="colorAccent">@color/blue_accent</item>
        <item name="android:windowBackground">@color/blue_off_white</item>
        <item name="android:textSize">12sp</item>
        <item name="android:windowContentTransitions" tools:targetApi="lollipop">true</item>
    </style>

    <style name="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@color/blue_off_white</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Dark" />

    <style name="EditTextTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorControlNormal">@color/blue_off_black</item>
        <item name="colorControlActivated">@color/blue_off_black</item>
        <item name="colorControlHighlight">@color/blue_off_black</item>
    </style>

    <!-- Animations -->
    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/animation_slide_up</item>
        <item name="android:windowExitAnimation">@anim/animation_slide_down</item>
    </style>

    <style name="CustomDialogTheme" parent="@style/Theme.AppCompat.Dialog.Alert">
        <item name="android:windowTitleStyle">@color/blue_off_black</item>
        <item name="android:textSize">18sp</item>
        <item name="android:background">@drawable/dialog</item>
    </style>

</resources>