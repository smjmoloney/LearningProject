<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/blue_dark</item>
        <item name="colorPrimaryDark">@color/blue_off_black</item>
        <item name="colorAccent">@color/blue_accent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="CustomSpinner" parent="android:Theme">
        <item name="android:spinnerItemStyle">@style/CustomSpinnerItem</item>
    </style>

    <style name="CustomSpinnerItem" parent="android:Widget.TextView.SpinnerItem">
        <item name="android:textAppearance">@style/CustomSpinnerTextAppearanceSpinnerItem</item>
    </style>

    <style name="CustomSpinnerTextAppearanceSpinnerItem" parent="android:TextAppearance.Widget.TextView.SpinnerItem">
        <item name="android:textColor">@color/blue_off_black</item>
    </style>

</resources>
